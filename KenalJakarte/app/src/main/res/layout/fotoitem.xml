<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgIkan"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="17dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imgIkan"
        android:layout_below="@+id/imgIkan"
        android:layout_marginRight="-7dp"
        android:layout_marginTop="0dp"
        android:text="Nama Foto"
        android:textAlignment="center"
        android:textColor="#0e11d1"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/txtHarga"
        android:layout_width="135dp"
        android:layout_height="31dp"
        android:layout_alignEnd="@+id/imgIkan"
        android:layout_alignRight="@+id/edtName"
        android:layout_alignStart="@+id/imgIkan"
        android:layout_alignTop="@+id/imgIkan"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="183dp"
        android:text="Keterangan"
        android:textAlignment="center"
        android:textColor="#ce1309"
        android:textSize="17sp" />
</RelativeLayout>